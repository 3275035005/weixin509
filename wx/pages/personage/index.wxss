page{background: #f5f5f5;}


/* --- banner --- */
.banner{margin-bottom: 32rpx;}
.banner_image{height: 323rpx; width: 100%;}


/* --- message --- */
.message{background: #fff; height: 80rpx; font-size: 32rpx; display: flex; align-content: center;}
.message .icon{width:32rpx; height: 32rpx;padding: 22rpx;}
.message swiper{height: 100%; width: 80%;}
.message .item{line-height: 80rpx; font-size: 26rpx;color: #999;}

/* --- dot --- */
.dot {display: flex; justify-content: center; margin-top: -40rpx; position: relative; z-index: 300;}
.dot .item{width: 16rpx; height: 16rpx; background: #fff; border-radius: 100rpx; margin: 0 3px; opacity: .3;}
.dot .item.active{background: #fff; opacity: 1;}


/* --- flex --- */
.flex{display: flex; align-items: center;}

/* --- placeholder --- */
.placeholder{color: #ccc;}


/* --- form --- */
.page_form{padding: 32rpx; padding-bottom: 0;}
.page_form .box{background: #fff; border-radius: 20rpx;}
.page_form .item{display: flex; align-content: center; flex-wrap:wrap; font-size: 30rpx; height: 100rpx; border-bottom: 1rpx solid #efefef; padding: 0 32rpx;}
.page_form .item .title{color: #999;}
.page_form .item .content{margin-left: auto; width: 60%; text-align: right; }
.page_form .item .content picker{width: 100%; height: 100%; }
.page_form .item.arrow{background: url(data:image/svg+xml;base64,) no-repeat 98% center; background-size: 28rpx 28rpx; }
.page_form .item.arrow .content{padding-right: 32rpx;}
.page_form .item:last-child{border-bottom: none;}




/* --- tab --- */
.page_tab{display: flex; height: 100rpx; background: #fff; position: static; left: 0; top: 0; width: 100%; z-index: 3000;}
.page_tab .item{width: 33.333%; text-align: center; font-size: 32rpx; line-height: 100rpx;}
.page_tab .item text{position: relative;}

/* active */
.page_tab .item.active text{color: #EFAD01; }


/* --- nodata --- */
.page_nodata{text-align: center;}
.page_nodata .icon{width: 400rpx; height: 60vh;}
.page_nodata .text{color: #999; font-size: 32rpx;}