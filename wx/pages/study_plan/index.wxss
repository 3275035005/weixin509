page{background: #F4F6FA;}
/* --- all --- */
.padding{padding: 32rpx;}
.flex{display: flex; align-items: center; flex-wrap: wrap;}
.center{justify-content: center;}
.shadow{box-shadow: 0 1px 2px rgba(209,218,235,0.5);}
.placeholder{color: #ccc;}

/* --- list --- */
.cash_list{height: calc(100vh - 100rpx); margin-top: 20rpx;}

/* swiper */
.cash_swiper{height: 100%; overflow-y: auto;}
.cash_swiper__item{height: 100%; overflow-y: auto; padding: 32rpx; box-sizing: border-box;}

/* item */
.cash_item{background: #fff; border-radius: 32rpx; margin-bottom: 32rpx;}
.cash_top{justify-content: space-between; height: 80rpx; font-size: 25rpx; padding: 0 32rpx; font-family: din; border-bottom: 1rpx solid #efefef;}
.cash_top__date{color: #999;}

/* box */
.cash_box{padding: 40rpx 0;}
.cash_box__item{width: 50%; text-align: center; box-sizing: border-box;}
.cash_box__text{color: #999; font-size: 25rpx; margin-bottom: 8rpx;}
.cash_box__num{font-size: 48rpx; font-family: din;}
.cash_box__item:first-child{border-right: 1rpx solid #efefef;}
.cash_box__num.red{color: #FF4C4C;}

/* bottom */
.cash_bottom{border-top: 1rpx solid #efefef; justify-content: space-between; height: 80rpx; padding: 0 32rpx; font-size: 25rpx;}
.cash_bottom__tips{color: #999;}
.cash_bottom__state.yes{color: #36C151;}
.cash_bottom__state.no{color: #5D5D5D;}
.cash_bottom__state.ing{color: #5E78F9;}


/* 侧导航 */
.side{
  background-color: #fff;
  width: 100rpx;
  height: 200rpx;
  border-radius: 50rpx;
  position: fixed;
  z-index:999999999;
  top: 1000rpx;
  left: 630rpx;
}
.side .add{
  font-size: 50rpx;
  background-color:#5460FE;
  width: 90rpx;
  border-radius: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 0rpx;
  font-weight: bold;
  color: #fff;
}

/* --- tab --- */
.page_tab{background: #fff; height: 96rpx; border-bottom: 1rpx solid #efefef;}
.page_tab__item{font-size: 28rpx; border-right: 1rpx solid #efefef; box-sizing: border-box; position: relative; height: 100%; display: flex; align-items: center; justify-content: center;}
.page_tab__item:last-child{border-right: none;}
.page_tab__item::before{content: ""; left: 40%; width: 0%; bottom: 0; background: #FF4C4C; height: 4rpx; position: absolute; bottom: 0;}

/* active */
.page_tab__item.active{color: #FF4C4C;}
.page_tab__item.active::before{width: 20%;}

/* fore */
.page_tab.fore .page_tab__item{width: 50%; text-align: center;}

.main{
  background-color: rgb(255, 255, 255);
}

/* 定义容器大小 */
.container{
  width: 100%;
  height: 600rpx;
  padding-bottom: 50rpx;
}

/* ec-canvas 组件宽高与父元素一致即可 */
ec-canvas{
  width: 100%;
  height: 500rpx;
}
.column{
  padding-top: 70rpx;
  padding-left: 10rpx;
}
.column_title{font-size: 32rpx; margin-left: 10rpx; font-weight: bolder;}
